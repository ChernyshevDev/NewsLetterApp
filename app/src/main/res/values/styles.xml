<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NewsToolbar">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_bottom_rounded_corners</item>
    </style>

    <style name="Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CommonButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingVertical">@dimen/unit_4</item>
        <item name="android:background">@drawable/item_common_button</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>